<!-- Scaffolding generated by Casein v.3.1.7 -->

<table cellpadding="0" cellspacing="0" id="itemList" class="itemList">
	<tr>
		<th>Name</th>
		<th>Appid</th>
		<th>Author</th>
		<th>Description</th>
		<th>Category</th>
		<th>Birthday</th>
		<th>Platform</th>
		<th>&nbsp;</th>
	</tr>
	
	<% apps.each_with_index do |app, index| %>
		<tr class="<%= 'even' if index.modulo(2) == 0 %> hover">
			<td><%= casein_table_cell_link app.name, casein_app_path(app) %></td>
			<td><%= casein_table_cell_link app.appId, casein_app_path(app) %></td>
			<td><%= casein_table_cell_link app.author, casein_app_path(app) %></td>
			<td><%= casein_table_cell_link app.description, casein_app_path(app) %></td>
			<td><%= casein_table_cell_link app.category, casein_app_path(app) %></td>
			<td><%= casein_table_cell_link app.birthday, casein_app_path(app) %></td>
			<td><%= casein_table_cell_link app.platform, casein_app_path(app) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("delete"), casein_app_path(app), :method => :delete, :confirm => "Are you sure you want to delete this app?") %>
			</td>
		</tr>
	<% end %>
</table>